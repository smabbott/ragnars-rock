= form_for(@location) do |f|
  - if @location.errors.any?
    #error_explanation
      %h2
        = pluralize(@location.errors.count, "error")
        prohibited this location from being saved:
      %ul
        - @location.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :coordinates
    %br/
    %p= @location.coordinates
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit

%h2 Photos
= select_tag(:import, options_for_select([ "Upload", "Facebook", "Google+", "Google Drive"]), prompt: 'import')

.row.photos
  - @location.photos.each do |photo|
    .photo.col-xs-4.col-sm-3.col-md-2
      %img{src:photo.photo.thumb_square_small.url}