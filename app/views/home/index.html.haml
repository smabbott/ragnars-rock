#sidebar.hidden
  .location-header
    %hr.path
    %img.marker{src:asset_path('icons/marker-selected.png')}
  %h2.location-name
  %button.btn.close *
  %ul.photos
  %div{style:"width:100%; height:100px; position:relative"}
    %svg{version:"1.1", id:"Layer_1", xmlns:"http://www.w3.org/2000/svg", width:"100%", height:"100%", viewBox:"0 0 100 100", preserveAspectRatio:"xMidYMid meet"}
      %g
        %line{fill:"none", stroke:"#E3E3E3",  x1:"0.4", y1:"0.4", x2:"100.4", y2:"100.4"}
        %line{fill:"none", stroke:"#E3E3E3",  x1:"100.4", y1:"0.4", x2:"0.4", y2:"100.4"}
  
  -# TODO: if logged in...
  = link_to("+ photo", new_photo_path, class: 'btn full') if current_user
  %ul.sounds
  -# TODO: if logged in...
  = link_to("+ sound", new_sound_path, class: 'btn full') if current_user
#main
  .day-nav
    %span DAY
    %ul.list-inline
      - if @days
        - @days.each_with_index do |day, i|
          %li
            %button.btn
              %i{class:"rf-phase-#{i%7}"}
      %li
        %button.btn
          %i.rf-phase-add
  #map-canvas
  #add-marker-btn.btn.add-marker{draggable: true, ondragstart:'drag(event)'}
    %i.rf-marker-add
=# image_tag('icons/new_marker.cur')
:javascript
  window.locations = #{@locations.to_json}
